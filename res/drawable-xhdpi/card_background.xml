<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="2dp"
        android:state_pressed="false">
        <shape
            android:dither="true"
            android:shape="rectangle"
            android:state_pressed="false"
            android:state_selected="false" >
            <corners android:radius="2dp" />

            <solid android:color="@android:color/white" />
            		<padding
		    android:bottom="8dp"
			android:left="8dp"
			android:right="8dp"
			android:top="8dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:state_pressed="true">
        <shape
            android:dither="true"
            android:shape="rectangle"
            android:state_pressed="false"
            android:state_selected="false" >
            <corners android:radius="2dp" />

            <solid android:color="@color/cinza_uscs" />
            		<padding
		    android:bottom="8dp"
			android:left="8dp"
			android:right="8dp"
			android:top="8dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:state_pressed="false"
        android:state_selected="true">
        <shape
            android:dither="true"
            android:shape="rectangle"
            android:state_pressed="false"
            android:state_selected="false" >
            <corners android:radius="2dp" />

            <solid android:color="@color/cinza_uscs" />
            		<padding
		    android:bottom="8dp"
			android:left="8dp"
			android:right="8dp"
			android:top="8dp" />
        </shape>
    </item>

</selector>